<Page
    x:Class="Demo.Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Fnio.UI.Controls.Demo.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock FontSize="{ThemeResource TextStyleExtraLargeFontSize}" VerticalAlignment="Bottom" Margin="80,0,0,40">Demo</TextBlock>
        </Grid>
        <views:ProgressRingView Margin="80,40,80,80" Grid.Row="1"/>
    </Grid>
</Page>
